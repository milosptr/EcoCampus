{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "check-types": "tsc --noEmit",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "dependencies": {
    "@trpc/server": "^11.0.0",
    "@prisma/client": "^6.1.0",
    "dotenv": "^16.4.5",
    "superjson": "^2.2.4",
    "zod": "^3.24.1",
    "cors": "^2.8.5",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "~5.9.2"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
