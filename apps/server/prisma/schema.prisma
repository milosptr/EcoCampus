// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model UserProfile {
  id        String   @id @default(uuid())
  authId    String   @unique // Maps to Supabase Auth user ID
  email     String   @unique
  name      String?
  avatarUrl String?

  // Onboarding: Personal Profile
  age               String?
  gender            String? // 'male' | 'female' | 'non-binary' | 'prefer-not-to-say'
  dietaryPreference String? // 'omnivore' | 'vegetarian' | 'vegan' | 'pescatarian'

  // Onboarding: University & Commute
  university         String?
  distanceFromCampus Float?
  transportMode      String? // 'walk' | 'bike' | 'bus' | 'car' | 'carpool'
  housingType        String? // 'dorm' | 'apartment' | 'house' | 'shared-housing'
  weeklyCampusVisits Int?

  // Onboarding: Preferences
  joinLeaderboard Boolean @default(true)
  dailyReminders  Boolean @default(true)
  weeklySummary   Boolean @default(true)

  // Onboarding completion flag
  onboardingCompleted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
